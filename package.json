{
  "name": "triple-c-collective",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n pb,next -c green,magenta \"npm:pocketbase:run\" \"next dev\"",
    "build": "next build",
    "build:dev": "concurrently -n pb,next-builder -c green,magenta --kill-others \"npm:pocketbase:run\" \"next build\"",
    "start": "next start",
    "start:dev": "concurrently -n pb,next-builder -c green,magenta --kill-others \"npm:pocketbase:run\" \"next start\"",
    "preview": "concurrently -n pb,next -c green,cyan \"npm:pocketbase:run\" \"next start\"",
    "lint": "TSESTREE_SUPPRESS_SUPPORTED_VERSION_WARNING=true next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "pocketbase:build": "make -C pocketbase build",
    "pocketbase:run": "make -C pocketbase all",
    "pocketbase:clean": "make -C pocketbase clean",
    "pocketbase:admin": "concurrently \"npm run pocketbase:run\" \"open http://127.0.0.1:8090/_/\"",
    "lighthouse:run": "node lighthouse/js/run-reports.mjs",
    "lighthouse:serve": "serve ./lighthouse/js/reports",
    "lighthouse": "npm run lighthouse:run && npm run lighthouse:serve",
    "email": "email dev --port 3050 --dir lib/emails"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "eslint",
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  },
  "dependencies": {
    "@fireworks-js/react": "^2.10.8",
    "@next/third-parties": "^15.3.1",
    "@radix-ui/react-accordion": "^1.2.8",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-toast": "^1.2.11",
    "@react-email/components": "^0.0.36",
    "@react-email/html": "0.0.11",
    "@react-email/render": "1.0.6",
    "@react-email/text": "0.1.1",
    "@smastrom/react-rating": "^1.5.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "chrome-launcher": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "husky": "^9.1.7",
    "lighthouse": "^12.5.1",
    "lucide-react": "^0.503.0",
    "next": "^15.3.1",
    "nextjs-toploader": "^3.8.16",
    "nodemailer": "^6.10.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-photo-view": "^1.2.7",
    "react-slick": "^0.30.3",
    "react-snowfall": "^2.2.0",
    "react-sparkle": "^2.0.0",
    "resend": "^4.4.1",
    "sharp": "^0.34.1",
    "slick-carousel": "^1.8.1",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^22",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-slick": "^0.23.13",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.1.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "eslint": "^9",
    "eslint-config-next": "^15.3.1",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react-email": "^4.0.7",
    "tailwindcss": "^4.1.4",
    "tailwindcss-motion": "^1.1.0",
    "typescript": "^5",
    "vitest": "^3.1.2"
  }
}
