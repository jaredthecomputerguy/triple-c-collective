{
  "name": "triple-c-collective",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n pb,next -c yellow,cyan \"bun run pocketbase:run\" \"next dev\"",
    "build": "next build",
    "build:dev": "concurrently -n pb,next-builder -c yellow,cyan --kill-others \"bun run pocketbase:run\" \"next build\"",
    "start": "concurrently -n pb,next-builder -c yellow,cyan --kill-others \"bun run pocketbase:run\" \"next start\"",
    "preview": "concurrently -n pb,next-builder -c yellow,cyan --kill-others \"bun run pocketbase:run\" \"dotenvx run -f .env.prod -- next start\"",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome format .",
    "typecheck": "tsc --noEmit",
    "pocketbase:build": "make -C pocketbase build",
    "pocketbase:run": "make -C pocketbase all",
    "pocketbase:clean": "make -C pocketbase clean",
    "pocketbase:admin": "concurrently \"bun run pocketbase:run\" \"open http://127.0.0.1:8090/_/\"",
    "lighthouse:run": "bun lighthouse/js/run-reports.mjs",
    "lighthouse:serve": "serve ./lighthouse/js/reports",
    "lighthouse": "bun run lighthouse:run && bun run lighthouse:serve",
    "email": "email dev --port 3050 --dir lib/emails"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "bun lint",
    "*.{js,jsx,ts,tsx,css,md}": "bun format"
  },
  "dependencies": {
    "@bprogress/next": "^3.2.12",
    "@fireworks-js/react": "^2.10.8",
    "@js-temporal/polyfill": "^0.5.1",
    "@next/third-parties": "16.1.1",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-email/components": "^1.0.3",
    "@react-email/html": "0.0.12",
    "@react-email/render": "2.0.1",
    "@react-email/text": "0.1.6",
    "@smastrom/react-rating": "^1.5.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "^1.3.5",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "chrome-launcher": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "node-gyp": "^12.1.0",
    "nodemailer": "^7.0.12",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-icons": "^5.5.0",
    "react-photo-view": "^1.2.7",
    "react-slick": "^0.31.0",
    "resend": "^6.6.0",
    "sharp": "^0.34.5",
    "slick-carousel": "^1.8.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@dotenvx/dotenvx": "^1.52.0",
    "@react-email/preview-server": "^5.1.1",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.1",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/react-slick": "^0.23.13",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "baseline-browser-mapping": "^2.9.11",
    "concurrently": "^9.2.0",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8",
    "react-email": "^5.1.1",
    "sass": "^1.97.1",
    "tailwindcss": "^4.1.18",
    "tailwindcss-motion": "^1.1.1",
    "typescript": "^5",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2"
  },
