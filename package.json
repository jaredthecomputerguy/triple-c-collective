{
  "name": "triple-c-collective",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently -n pb,next -c green,magenta \"bun run pocketbase:run\" \"next dev\"",
    "build": "next build",
    "build:dev": "concurrently -n pb,next-builder -c green,magenta --kill-others \"bun run pocketbase:run\" \"next build\"",
    "start": "next start",
    "preview": "concurrently -n pb,next -c green,cyan \"bun run pocketbase:run\" \"next start\"",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "typecheck": "tsc --noEmit",
    "pocketbase:build": "make -C pocketbase build",
    "pocketbase:run": "make -C pocketbase all",
    "pocketbase:clean": "make -C pocketbase clean",
    "pocketbase:admin": "concurrently \"bun run pocketbase:run\" \"open http://127.0.0.1:8090/_/\"",
    "lighthouse:run": "bun lighthouse/js/run-reports.mjs",
    "lighthouse:serve": "serve ./lighthouse/js/reports",
    "lighthouse": "bun run lighthouse:run && bun run lighthouse:serve",
    "email": "email dev --port 3050 --dir lib/emails"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": "bun run lint",
    "*.{js,jsx,ts,tsx,css,md}": "bun run format"
  },
  "dependencies": {
    "@fireworks-js/react": "^2.10.8",
    "@js-temporal/polyfill": "^0.5.1",
    "@next/third-parties": "^15.4.2",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@react-email/components": "^0.3.2",
    "@react-email/html": "0.0.11",
    "@react-email/render": "1.1.3",
    "@react-email/text": "0.1.5",
    "@smastrom/react-rating": "^1.5.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bun": "^1.3.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "chrome-launcher": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.6.0",
    "husky": "^9.1.7",
    "lighthouse": "^12.8.0",
    "lucide-react": "^0.525.0",
    "next": "^15.4.2",
    "nextjs-toploader": "^3.8.16",
    "nodemailer": "^7.0.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-photo-view": "^1.2.7",
    "react-slick": "^0.30.3",
    "resend": "^4.7.0",
    "sharp": "^0.34.3",
    "slick-carousel": "^1.8.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@react-email/preview-server": "^4.2.3",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/react": "^16.3.0",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^24",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-slick": "^0.23.13",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.0",
    "eslint": "^9",
    "eslint-config-next": "^15.4.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "react-email": "^4.2.3",
    "sass": "^1.89.2",
    "tailwindcss": "^4.1.11",
    "tailwindcss-motion": "^1.1.1",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
